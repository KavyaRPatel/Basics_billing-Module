<body>
    <div id="todo-table">
        <form>
            <input type="text" name="item" placeholder="Add new item..." required />
            <button type ="submit" formmethod="post">Add Item</button>
        </form>

            <ul>
                <% for(var i=0; i<data.length; i++){%>

                    <li>
                        <%=data[i].item %>
                    </li>
                    <%}%>
            </ul>
    </div>
</body>
</head>

</html>